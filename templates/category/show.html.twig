{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Category</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Name</th>
					<td>{{ category.Name }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ category.Description }}</td>
				</tr>
				<tr>
					<th>Related books</th>
					<td>
						<table class="table">
							<tr>
								<td style="font-weight: bold;">Title</td>
								<td style="font-weight: bold;">Price</td>
							</tr>
							{% for book in category.Books %}
								<tr>
									<td>{{ book.Title }}</td>
									<td>${{ book.Cost }}</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="4">No records found</td>
								</tr>
							{% endfor %}
						</table>
					</td>
				</tr>


			</tbody>
		</table>

		<a class="btn btn-dark" href="{{ path('app_category_index') }}">back to list</a>


		<a class="btn btn-dark" href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>


		{{ include('category/_delete_form.html.twig') }}
	</div>
{% endblock %}
