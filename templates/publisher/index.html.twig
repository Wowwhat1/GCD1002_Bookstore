{% extends 'base.html.twig' %}

{% block title %}Publisher index
{% endblock %}

{% block body %}
	<div class="container">

		<h1>Publisher index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Address</th>
					<th>Phone</th>
				</tr>
			</thead>
			<tbody>
				{% for publisher in publishers %}
					<tr>
						<td>{{ publisher.name }}</td>
						<td>{{ publisher.Address }}</td>
						<td>{{ publisher.Phone }}</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
