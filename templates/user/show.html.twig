{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="container">
		<h1>User</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Fullname</th>
					<td>{{ user.Fullname }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Phone</th>
					<td>{{ user.Phone }}</td>
				</tr>
			</tbody>
		</table>

		<a class="btn btn-dark" href="{{ path('app_user_index') }}">back to list</a>

		<a class="btn btn-dark" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

		{{ include('user/_delete_form.html.twig') }}
	</div>
{% endblock %}
