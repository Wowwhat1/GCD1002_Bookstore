{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<div class="container">

		<h1>User index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Fullname</th>
					<th>Email</th>
					<th>Phone</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.Fullname }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.Phone }}</td>
						<td>
							<a class="btn btn-dark" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>

							<a class="btn btn-dark" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_user_new') }}">Create new</a>
	</div>
{% endblock %}
